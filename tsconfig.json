{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,

    "skipLibCheck": true
  }
}
